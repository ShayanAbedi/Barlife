<% include ../partials/Indexheader %> 
 <div class="container">
   <div class="jumbotron">
     <h1 id="jumbo" class="display-4">Welcome to <i class="fab fa-blogger-b"></i>arlife <i class="fas fa-glass-cheers"></i></h1>
     <p id="view" class="lead">View other <em>bar lovers'</em> favourite bars from all over the world</p>
     <hr class="my-4">
     <p>Let others know about your favourite bars</p>
     <a class="btn btn-info btn-lg" href="/bars/new" role="button">Add new bar to our collection</a>
   </div>
   
   
<div class="row text-center">
   <% bars.forEach(function(bar){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
      <div class="card" style="width: 14rem;">
        <img class="card-img-top" src="<%= bar.image %>" alt="Bar image">
        <div class="card-body">
          <h4 class="card-title"><%= bar.name %></h4>
          <p class="card-text"><%= bar.location %></p>
          <span class="date" class="card-text"><%=bar.createdAt.toDateString()%></span>
          <p><a class="btn btn-primary" href="/bars/<%= bar._id %>">More Info</a></p> 
        </div>
        </div>
        </div>
   <% }); %>
</div>
<% include ../partials/footer %>

