<% include ../partials/header %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= bar.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/bars/<%=bar._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input required class="form-control" type="text" name="bar[name]" id="name" value="<%= bar.name %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input required class="form-control" type="text" name="location" id="location" value="<%= bar.location %>">
                </div>
                
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input  class="form-control" type="text" name="bar[image]" id="image" value="<%= bar.image %>">
                </div>
                <div class="form-group">
                    <label>More Info</label>
                    <textarea class="form-control" name="bar[text]"><%= bar.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Update</button>
                </div>
            </form>
            <a href="/bars">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
