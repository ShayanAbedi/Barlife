<% include ../partials/header %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h4 style="margin-top:100px;">Edit Comment</h4>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/bars/<%= bar_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/bars">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>